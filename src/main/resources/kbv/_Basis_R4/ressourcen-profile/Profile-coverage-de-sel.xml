  <version value="0.9.13" />
  <name value="CoverageDeSel" />
  <title value="Coverage, deutsches Selbstzahlerprofil" />
  <status value="draft" />
  <experimental value="true" />
  <date value="2019-12-11" />
  <publisher value="HL7 Deutschland e.V. (Technisches Komitee FHIR)" />
  <contact>
    <telecom>
      <system value="other" />
